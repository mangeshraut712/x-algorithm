# X Algorithm Configuration
# Copy to .env and configure

# ============================================================
# CACHING
# ============================================================
ENABLE_PHOENIX_CACHING=false
CACHE_SIZE=10000000
TRENDING_CACHE_SIZE=100000
TRENDING_TTL_SECS=300
CACHE_TTL_SECS=3600
ENABLE_CACHE_WARMING=false
CACHING_ROLLOUT_PERCENT=0

# ============================================================
# BATCHING
# ============================================================
ENABLE_PHOENIX_BATCHING=false
BATCH_SIZE=128
BATCH_TIMEOUT_MS=5
MAX_CONCURRENT_BATCHES=4
BATCHING_ROLLOUT_PERCENT=0

# ============================================================
# PERSONALIZATION
# ============================================================
ENABLE_PERSONALIZATION=false
NUM_USER_CLUSTERS=100
AUTO_REFRESH_CLUSTERS=false
CLUSTER_REFRESH_HOURS=24
PERSONALIZATION_ROLLOUT_PERCENT=0

# ============================================================
# SAFETY FILTERS (ENABLED BY DEFAULT)
# ============================================================
ENABLE_NSFW_FILTER=true
NSFW_STRICT_MODE=true
ENABLE_SPAM_FILTER=true
ENABLE_ENGAGEMENT_BAIT_FILTER=true
ENABLE_DIVERSITY_BOOST=false
DIVERSITY_BOOST_MULTIPLIER=1.3

# ============================================================
# METRICS
# ============================================================
METRICS_ENABLED=true
METRICS_PORT=9090
ENABLE_TRACING=false

# ============================================================
# INFRASTRUCTURE
# ============================================================
WORKER_THREADS=8
MAX_CONCURRENT_REQUESTS=10000
REQUEST_TIMEOUT_MS=1000
LOG_LEVEL=info

# ============================================================
# ML MODEL
# ============================================================
PHOENIX_MODEL_VERSION=v1.0.0
PHOENIX_MODEL_PATH=/models/phoenix/
GPU_DEVICE=0